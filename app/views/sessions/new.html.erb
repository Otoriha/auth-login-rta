<!-- app/views/sessions/new.html.erb -->
<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center">ログインRTA</h1>
  <p class="text-center text-gray-600 mb-6">最速でログイン認証を完了させよう！</p>

  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: auth_flow_path, method: :get, class: "space-y-4" do |f| %>
    <!-- 名前入力フィールド -->
    <div>
      <%= f.label :name, "ニックネーム", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :name, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "あなたの名前を入力" %>
      <p class="text-sm text-gray-500 mt-1">この名前がランキングに表示されます</p>
    </div>

    <!-- RTA認証フローボタン -->
    <div class="mt-4">
      <div class="bg-yellow-100 border-l-4 border-yellow-500 p-4 mb-6">
        <p class="text-yellow-700 font-bold">ログインRTAにチャレンジ！</p>
        <p class="text-yellow-700">GitHub→Twitter→Googleの順で認証を完了させよう！</p>
      </div>
      <%= f.submit "ログインRTAをスタート！", class: "w-full flex items-center justify-center bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-4 rounded-lg transition duration-300 text-lg" %>
    </div>
  <% end %>
</div>